

<div class="row">
  <h2><%= restaurant.name %></h2>
    <img src="<%= restaurant.imageURL %>" alt="pic">
    <p>Address: <%= restaurant.address %></p>
    <p><%= restaurant.postcode %></p>
    <p>Phone: <%= restaurant.phoneNumber %></p>
    <p>Website: <%= restaurant.website %></p>
    <p>Cuisine: <%= restaurant.cuisine %></p>
    <p>Food Rating: <%= restaurant.foodRating %></p>
    <p>Entertainment: <%= restaurant.entertainment %></p>
    <p>Family Friendly Rating: <% restaurant.familyFriendlyRating %></p>
    <p>Review: <%= restaurant.review %></p>
    <p>Restaurant added by: <%= restaurant.user.username %></p>


    <% if (restaurant.user.id === (locals.currentUser && locals.currentUser.id)) { %>
      <div class="edit">
        <a href="/restaurants/<%= restaurant._id %>/edit">Edit</a>
      </div>
      <form action="/restaurants/<%= restaurant.id %>" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn red">Delete Restaurant</button>
      </form>
    <% } %>
